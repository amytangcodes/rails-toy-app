<section class="section section--tight">
  <div class="container">
    <div class="row gutter-bottom alert">
      <div class="col">
        <p id="notice"><%= notice %></p>
      </div>
    </div>

    <div class="row gutter-bottom page-header">
      <div class="col">
        <h1><%= @micropost.content %></h1>
      </div>
    </div>  

    <div class="row gutter-bottom page-content">
      <div class="col">
        <p>
          <strong>User:</strong>
          <%= @micropost.user_id %>
        </p>
      </div>
    </div>  


    <div class="row gutter-bottom">
      <div class="col">
        <%= link_to 'Edit', edit_micropost_path(@micropost) %> |
        <%= link_to 'Back', microposts_path %>        
      </div>
    </div>

  </div>
</section>



