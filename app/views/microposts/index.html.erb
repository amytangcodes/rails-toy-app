<section class="section section--tight">
  <div class="container">
    <div class="row gutter-bottom alert">
      <div class="col">
        <p id="notice"><%= notice %></p>
      </div>
    </div>

    <div class="row gutter-bottom page-header">
      <div class="col">
        <h1>Microposts</h1>
      </div>
    </div>  

    <div class="row gutter-bottom page-content">
      <div class="col">
        <table>
          <thead>
            <tr>
              <th>Content</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @microposts.each do |micropost| %>
              <tr>
                <td><%= micropost.content %></td>
                <td><%= micropost.user_id %></td>
                <td>
                  <div class="btn-group" role="group" aria-label="Basic example">
                    <button type="button" class="btn-group btn-group-sm btn-light"><%= link_to 'Show', micropost %></button>
                    <button type="button" class="btn-group btn-group-sm btn-light"><%= link_to 'Edit', edit_micropost_path(micropost) %></button>
                    <button type="button" class="btn-group btn-group-sm btn-light"><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>  

    <div class="row gutter-bottom">
      <div class="col">
        <%= link_to 'New Micropost', new_micropost_path %> 
      </div>
    </div>

  </div>
</section>