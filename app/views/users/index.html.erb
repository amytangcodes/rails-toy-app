<section class="section section--tight">
  <div class="container">
    <div class="row gutter-bottom">
      <div class="col">
        <p id="notice"><%= notice %></p>
      </div>
    </div>

    <div class="row gutter-bottom page-header">
      <div class="col">
        <h1>Users</h1>
      </div>
    </div>  

    <div class="row gutter-bottom page-content">
      <div class="col">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <div class="btn-group" role="group" aria-label="Basic example">
                    <button type="button" class="btn-group btn-group-sm btn-light"><%= link_to 'Show', user %></button>
                    <button type="button" class="btn-group btn-group-sm btn-light"><%= link_to 'Edit', edit_user_path(user) %></button>
                    <button type="button" class="btn-group btn-group-sm btn-light"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>  


    <div class="row gutter-bottom">
      <div class="col">
        <%= link_to 'New User', new_user_path, class: '' %>
      </div>
    </div>

  </div>
</section>